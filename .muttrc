# Global
set realname='Kei Nohguchi'
set editor=`echo \$EDITOR`

# Threading
set narrow_tree=yes
set ascii_chars=yes

# Color
source /usr/share/doc/mutt/samples/colors.default

# SMTP settings
set use_from = yes

# HTML emails
alternative_order text/plain text/html
auto_view text/html

# Account specific
source ~/.mutt/home.conf
