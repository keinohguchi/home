#!/usr/bin/env bash
DIFF=$1
DIR=/sys/class/backlight
if [ -d "${DIR}/intel_backlight" ]
then
	DEV="intel_backlight"
elif [ -d "${DIR}/acpi_video0" ]
then
	DEV="acpi_video0"
fi
FILE=${DIR}/${DEV}/brightness
CURRENT=`cat $FILE`
VALUE=$(expr $CURRENT + $DIFF)
CMD="echo $VALUE > $FILE"
sudo bash -c "$CMD"
